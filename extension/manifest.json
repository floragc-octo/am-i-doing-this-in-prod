{
    "manifest_version": 3,
    "name": "Am I doing this in Prod ?",
    "version": "1.0.1",
    "author": "Flora Guy-Coichard, Simon Belbeoch",
    "description": "Browser's extensions (Chrome and Firefox based) to display dev and misc environments",
    "browser_specific_settings": {
        "gecko": {
            "id": "didactic@barnacle"
        }
    },
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "64": "icons/icon-64.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "sidePanel"
    ],
    "action": {
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png",
            "48": "icons/icon-48.png",
            "64": "icons/icon-64.png"
        },
        "default_title": "am-i-doing-this-in-prod"
    },
    "sidebar_action": {
        "default_panel": "src/settings/settings.html",
        "default_title": "Am I doing this in Prod ?"
    },
    "side_panel": {
        "default_path": "src/settings/settings.html"
    },
    "background": {
        "service_worker": "src/background.js",
        "scripts": ["src/background.js"]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/core/config.js",
                "src/core/main.js"
            ]
        }
    ]
}
